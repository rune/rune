{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
