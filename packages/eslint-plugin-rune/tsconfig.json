{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": ["node", "mocha"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src",
    "outDir": "dist",
    "checkJs": true
  },
  "include": ["src"]
}
